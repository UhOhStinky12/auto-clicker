{
  "name": "Auto Clicker",
  "description": "Just click automation",
  "version": "1.0.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Shift+1: Start auto click\nShift+Alt+1: Start auto click with interval\nShift+2: Stop auto click"
  },
  "icons": {
    "128": "/img/click.png"
  },
  "manifest_version": 2,

  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/content.css"
      ],
      "js": [
        "js/AutoClicker.js",
        "js/content.js"
      ]
    }
  ]
}
